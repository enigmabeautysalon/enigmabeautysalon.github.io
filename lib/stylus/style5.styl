	min-height 100vh
	padding-top 10em
	font-family 'Roboto','Arial','Helvetica',sans-serif
	font-weight 300
	.service-header
		position relative
		display table
		width 100%
		height 100%
		min-height 30vh
		text-align center
		background url('../img/background3.jpg')
		background-position right center
		background-size cover
		z-index 10
		&::after
			position absolute
			content ''
			width 100%
			height 100%
			top 0
			left 0
			filter blur(5px)
			z-index -1
		.service-header-content
			display table-cell
			vertical-align middle
			z-index 15
			h1
				font-family 'Great Vibes','Helvetica',serif
				font-size 8rem
				font-size 10vw
				text-shadow 1px 1px 4px rgba(0,0,0,0.33)

	.section-content
		padding 0 15px
		.flex-container
			display: -ms-flexbox;
			display: -webkit-flex;
			display: flex;
			-webkit-flex-direction: row;
			-ms-flex-direction: row;
			flex-direction: row;
			-webkit-flex-wrap: wrap;
			-ms-flex-wrap: wrap;
			flex-wrap: wrap;
			-webkit-justify-content: flex-start;
			-ms-flex-pack: flex-start;
			justify-content: flex-start;
			-webkit-align-content: flex-start;
			-ms-flex-line-pack: start;
			align-content: flex-start;
			-webkit-align-items: flex-start;
			-ms-flex-align: start;
			align-items: flex-start;
			margin 2em 0

		table
			width auto
			min-width 250px
			margin 1em 2em
			box-shadow 1px 2px 2px rgba(0, 0, 0, 0.33)
			thead
				font-family $roboto
				font-weight 400
				font-size 2.250rem
				text-transform uppercase
				letter-spacing 1px
				tr
					td
						padding 7.5px
						text-shadow 0px 1px 2px rgba(0,0,0,0.3)
			tbody
				font-family $roboto
				font-weight 300
				font-size 1.50rem
				background #faf2fa
				tr
					td
						padding 5px 7.5px
				#services-sub-header
					font-size 1.750rem
					font-weight 400
					border-bottom 1px solid #ddd
		#nails
			thead
				background linear-gradient( 150deg, rgba(161,249,222,0.8) 60%, rgba(161,188,249,0.6) )
		#hair
			thead
				background linear-gradient( 150deg, rgba(161,188,249,0.8) 70%, rgba(249,178,161,0.6) )
		#spa
			thead
				background linear-gradient( 150deg, rgba(249,178,161,0.8) 60%, rgba(222,161,249,0.6) )
		#waxing
			thead
				background linear-gradient( 150deg, rgba(222,161,249,0.8) 60%, rgba(249,178,161,0.6) )	
		#skin-care
			thead
				background linear-gradient( 150deg, rgba(188,249,161,0.8) 60%, rgba(171,139,250,0.6) )
		#make-up
			thead
				background linear-gradient( 150deg, rgba(171,139,250,0.8) 60%, rgba(188,249,161,0.6) )


@media (min-width: 769px)
	.services-page
		.service-header
			.service-header-content
				h2
					font-size 5vw
					
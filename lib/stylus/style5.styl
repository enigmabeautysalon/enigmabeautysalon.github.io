/*
 * Mixins
 */
vendor(prop, args)
	-webkit-{prop} args
	-moz-{prop} args
	{prop} args

transform()
	vendor('transform', arguments)

border-radius(n)
	-webkit-border-radius n
	-moz-border-radius n
	border-radius n

box-shadow()
	moz-box-shadow arguments
	-webkit-box-shadow arguments
	box-shadow arguments

transition()
	-webkit-transition arguments
	-moz-transition arguments
	-o-transition arguments
	transition arguments

transition-delay()
	-webkit-transition-delay: arguments
	-moz-transition-delay: arguments
	-o-transition-delay: arguments
	transition-delay: arguments

transform()
	-ms-transform arguments
	-webkit-transform arguments
	transform arguments

font-awesome()
	position absolute
	content arguments
	font-family FontAwesome
	font-style normal
	font-weight normal
	text-decoration inherit

button()
	position relative
	width auto
	min-width 200px
	max-width 300px
	padding 15px
	background $violet
	border-bottom 2px solid darken($violet, 10%)
	border-radius 5px
	color #efefef
	text-transform uppercase
	font-family 'Roboto', 'Helvetica', 'Arial', sans-serif
	font-weight 400
	font-size 1.50rem
	transition background 0.3s ease
	&:hover
		background lighten($violet, 15%)
	&:active
		top 2px
		border-bottom 2px solid transparent
		box-shadow  inset 0px 0px 20px -5px rgba(0,0,0,0.33)
		
nav-hover()
	position relative
	&::after
		position absolute
		content ''
		bottom 0
		left 0
		right 0
		transform translateY(100%)
		width 60%
		margin 0 auto
		height 2px
		background #2c3440
		border-radius 25%
		visibility hidden
		opacity 0
		transition all 0.3s linear
	&:hover
		&::after
			visibility visible
			opacity 1
			transform translateY(0)

